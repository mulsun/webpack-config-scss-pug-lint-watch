{
  "name": "Webpack Front-end Setup",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -r docs/*",
    "test": "jest",
    "pug": "pug -P src --out docs",
    "lint": "stylelint src/*.scss --config .stylelintrc --syntax scss & pug-lint src/*.pug",
    "sass": "node-sass --output-style compressed src/style.scss docs/assets/css/style.css",
    "build": "npm run clean && npm run sass && npm run pug && npm run webpack",
    "webpack": "webpack --config webpack.config.js",
    "sync": "browser-sync start --server docs --index index.html --files 'docs/assets/css/*.css, docs/*.html, docs/*.js' --port 4000",
    "watch-sass": "node-sass --output-style compressed src/style.scss docs/assets/css/style.css --w scss",
    "watch-js": "webpack --config webpack.config.js --watch",
    "watch-pug": "pug -w -P src --out docs",
    "start": "npm run watch-sass & npm run watch-pug & npm run watch-js & npm run sync"
  },

  "devDependencies": {
    "babel-core": "latest",
    "babel-jest": "latest",
    "babel-loader": "latest",
    "babel-polyfill": "latest",
    "babel-preset-es2015": "latest",
    "browser-sync": "latest",
    "css-loader": "latest",
    "extract-text-webpack-plugin": "latest",
    "jest-cli": "latest",
    "json-loader": "latest",
    "node-sass": "latest",
    "pug": "latest",
    "pug-cli": "latest",
    "pug-lint": "latest",
    "sass-loader": "latest",
    "style-loader": "latest",
    "stylelint": "latest",
    "stylelint-config-standard": "latest",
    "stylelint-scss": "latest",
    "stylelint-webpack-plugin": "latest",
    "uglifyjs-webpack-plugin": "latest",
    "webpack": "latest"
  }
}
